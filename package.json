{
  "name": "@whittakertech/virgil",
  "version": "0.1.0",
  "description": "Build-phase sigil forge for static site artifacts",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "virgil": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run copy:assets",
    "prepare": "npm run build",
    "copy:assets": "cp -R src/templates dist/templates",
    "dev": "tsc --watch",
    "test": "node --test dist/**/*.test.js"
  },
  "keywords": [
    "static-site",
    "og-image",
    "sitemap",
    "build-tool"
  ],
  "author": "Lee Whittaker",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
